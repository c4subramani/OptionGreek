RED = "\033[91m"
GREEN = "\033[92m"
YELLOW = "\033[93m"
BOLD = "\033[1m"
RESET = "\033[0m"
CYAN_BG = "\033[46m"
MAGENTA_BG = "\033[45m"
BLUE_BG = "\033[44m"

